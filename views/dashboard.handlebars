 <section >
            <div class="row">
                <div class="col-sm-2 history">
                    <button type="clear" class="btn">Clear History</button>
                              
                    <ul class="list">
                    <!-- searched history -->
                    </ul>  
                </div> 

                <div class="col-sm-10 options">
                    <div class="col-sm-12 row"> 
                        <div class="col-sm-5">
                            <h4><i class='fa fa-calendar'></i> Fliter By Expiration Date</h4>
                        </div>    
                        <div class="col-sm-5">
                            <h4><i class='fa fa-sitemap'></i> Fliter By Categories</h4>
                        </div>
                        
                        <div class="col-sm-5">
                            <h4><i class='fa fa-lemon-o'></i> Fliter By Product Name</h4>
                        </div>
                        
                        <div class="col-sm-5">
                            <h4><i class='fa fa-sort-numeric-asc'></i> Fliter By Numbers</h4>
                        </div>    
                    </div>

                      <!-- Search products -->
                    <div class="col-sm-12 search-bar">
                        <form class="row">
                            <input type="text" class="col-sm-9" placeholder="Enter A Product's Name" />
                            <div class="col-sm-2">
                                <button type="search" class="btn"><i class='fa fa-search'></i></button> 
                            </div>
                        </form>
                    </div>

                    <!-- Add produts -->
                    <form class="inventory row">
                        <!-- start here for each product card -->
                        <div class="col-sm-3">
                            <div class="card" style="width: 10rem">
                                <img src="./Public/images/apple.png" class="card-img-top"/>

                                <div class="card-body row">
                                    <div class="col-sm-12 date">
                                        <input id="datepicker" width="170" placeholder="Expire Date" />
                                    </div>

                                    <div class="col-sm-12 quantity">
                                        <p>Quantity</p>
                                        <input type="number" value="0" min="0" max="50" step="1"/>
                                    </div>

                                    
                                    <div class="col-sm-12 update">
                                        <button type="submit" class="btn">Update Change</button>
                                        <button type="submit" class="btn">Remove Item</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>  
            </div>
        </section>