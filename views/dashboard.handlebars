

    
        <!-- this form is dashboard handler-->
        <section >
            <div class="row">
                <div class="col-sm-2 history">
                    <button type="clear" class="btn" id="clear">Clear History</button>
                              
                    <ul class="list">
                    <!-- searched history -->
                    </ul>  
                </div> 

                <div class="col-sm-10 storage">
                    <div class="col-sm-12 row options"> 
                        <div class="col-sm-5">
                            <h4 id="sort-by-exp"><i class='fa fa-calendar'></i><a href="/dashboard/orderBy/expiration_date" class="sort-item"> Order By Expiration Date</a></h4>
                            
                        </div>    
                        <div class="col-sm-5">
                            <h4 id="sort-by-category"><i class='fa fa-sitemap'></i><a href="/dashboard/orderBy/category" class="sort-item"> Order By Categories</a></h4>
                        </div>
                        
                        <div class="col-sm-5">
                            <h4 id="sort-by-name"><i class='fa fa-lemon-o'></i><a href="/dashboard/orderBy/name" class="sort-item"> Order By Product Name</a></h4>
                        </div>
                        
                        <div class="col-sm-5">
                            <h4 id="sort-by-quantity"><i class='fa fa-sort-numeric-asc'></i><a href="/dashboard/orderBy/quantity" class="sort-item"> Order By Quantity</a></h4>
                        </div>    
                    </div>

                      <!-- Search products -->
                    <div class="col-sm-12 search-bar">
                        <form class="row" id="search-product">
                            <input type="text" class="col-sm-9 bar" placeholder="Enter A Product's Name" id="p-name" />
                            <button type="submit" class="btn col-sm-2"><i class='fa fa-search'></i></button> 
                        </form>
                    </div>
                  
                        <!-- Add produts -->
                        
                        <form class="inventory row">
                            {{#each products as |product|}}
                                <div class="card sm-3 items" style="max-width: 400px;">
                                    
                                    {{> product-info product}}
                                    
                                </div>
                            {{/each}}
                        </form>

                </div>  
            </div>
        </section>


    <footer></footer>
    <script src="/javascript/dashboard.js"></script>
</body>

</html>